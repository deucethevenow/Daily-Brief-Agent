# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=your_table_name_here

# Asana Configuration
ASANA_ACCESS_TOKEN=your_asana_personal_access_token_here
ASANA_WORKSPACE_GID=your_asana_workspace_gid_here

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL_ID=your_channel_id_or_user_id_here

# Timezone Configuration
TIMEZONE=America/Denver

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Task Management
# Set to 'true' to automatically create Asana tasks from action items
# Default is 'false' - action items will be suggested in the report for manual review
AUTO_CREATE_TASKS=false

# Your name for filtering action items
# Only action items assigned to you (or unassigned) will be shown in the daily brief
# This should match how your name appears in meeting transcripts
YOUR_NAME=Deuce Thevenow
